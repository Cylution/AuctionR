<div class="row">
    <div class="col-md-4">
        <h2 id="itemName">Item for Auction</h2>
        <div>
            <img id="itemImage" width="250" />
            <p id="itemDescription">Item Description</p>
        </div>
    </div>
    <div class="col-md-4">
        <h2>Make a bid</h2>
        <p>
            <table>                             
                <tr><td>&nbsp;</td><td><button id="openBiddingButton">Open Bidding</button></td></tr>
                <tr><td>&nbsp;</td><td><button id="closeBiddingButton">Close Bidding</button></td></tr>
            </table>
        </p>
    </div>
    <div class="col-md-4">
        <h2>Watch the Auction</h2>
        <ul id="bidList"></ul>
    </div>
</div>
